@model IEnumerable<LabProject.Models.MovieCast>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CastMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CastMember.CastMemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.MovieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieCastId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieCastId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieCastId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
