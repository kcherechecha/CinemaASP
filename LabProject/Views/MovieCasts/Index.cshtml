@model IEnumerable<LabProject.Models.MovieCast>

@{
    ViewData["Title"] = "Index";
}

<h1>Команда фільму</h1>

@*<p>
    @Html.ActionLink("Додати нового актора", "CreateToTable", new {movieId = ViewBag.CinemaId})
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CastMember)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CastMember.CastMemberFullName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Movie.MovieName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieCastId">Редагувати</a> |
                @*<a asp-action="Details" asp-route-id="@item.MovieCastId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.MovieCastId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
