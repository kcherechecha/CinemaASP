@model IEnumerable<LabProject.Models.Cinema>

@{
    ViewData["Title"] = "Index";
}

<h1>Кінотеатри</h1>

<p>
    <a asp-action="Create">Додати кінотеатр</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CinemaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CinemaAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaAddress)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CinemaId">Зали</a> |
                <a asp-action="Edit" asp-route-id="@item.CinemaId">Редагувати</a> | 
                @*<a asp-controller="Halls" asp-action="Index" asp-route-id="@item.CinemaId" asp-route-name="@item.CinemaName">Halls</a> |*@
                <a asp-action="Delete" asp-route-id="@item.CinemaId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
