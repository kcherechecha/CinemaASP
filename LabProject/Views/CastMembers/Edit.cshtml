@model LabProject.Models.CastMember

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CastMemberId" />
            <div class="form-group">
                <label asp-for="CastMemberFullName" class="control-label"></label>
                <input asp-for="CastMemberFullName" class="form-control" />
                <span asp-validation-for="CastMemberFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До списку кіновиробництва</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
