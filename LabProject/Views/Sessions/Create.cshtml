@model LabProject.Models.Session

@{
    ViewData["Title"] = "Create";
}

<h1>Додати сеанс</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionNumber" class="control-label"></label>
                <input asp-for="SessionNumber" class="form-control" />
                <span asp-validation-for="SessionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionDateTime" class="control-label"></label>
                <input asp-for="SessionDateTime" class="form-control" />
                <span asp-validation-for="SessionDateTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SessionState" /> @Html.DisplayNameFor(model => model.SessionState);
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HallId" class="control-label"></label>
                <select asp-for="HallId" class ="form-control" asp-items="ViewBag.HallId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            
            @*<input type="hidden" value="@ViewBag.HallId" name="HallId" />*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
